<project xmlns="http://maven.apache.org/DECORATION/1.7.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd"
         name="AcmeDocs">     <!-- name attribute defines title of the site -->

    <skin>  <!-- Enable Fluido skin -->
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.6</version>
    </skin>

    <custom>
        <reflowSkin>
            <theme>bootswatch-spacelab</theme>
            <highlightJs>true</highlightJs>
            <brand>
                <name>My Project</name>
                <href>http://github.com/andriusvelykis/reflow-maven-skin</href>
            </brand>
            <slogan>Super interesting project doing good things.</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>top</toc>
            <topNav>Download|reports</topNav>
            <bottomNav>
                <column>Main|Download</column>
                <column>Documentation</column>
                <column>reports|modules</column>
            </bottomNav>
            <bottomDescription>
                This is a very good project doing interesting and valuable things.
            </bottomDescription>
            <pages>
                <index project="project-id">
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>false</breadcrumbs>
                    <toc>false</toc>
                    <sections>
                        <carousel />
                        <body />
                        <sidebar />
                        <thumbs>2</thumbs>
                        <columns>3</columns>
                    </sections>
                </index>
                <developer-info>
                    <toc>sidebar</toc>
                </developer-info>
            </pages>
        </reflowSkin>
    </custom>


    <body>
        <menu name="Java" inherit="side" >
            <item name="Style Guide" href="./java/index.html"/>
            <item name="Hello world! ðŸ‘‹" href="./java/hello-world.html"/>
        </menu>
        <menu name="Spring" inherit="side">
            <item name="Spring boot application"  href="./spring/spring-boot-application.html" />
            <item name="Configuration Properties" href="./spring/configuration-properties.html" />
        </menu>
        <menu name="Typescript" inherit="side">
            <item name="Interface" href="./typescript/interface.html"/>
        </menu>
    </body>

    <version position="none"/>
</project>