<project xmlns="http://maven.apache.org/DECORATION/1.7.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd"
         name="AcmeDocs">     <!-- name attribute defines title of the site -->

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>

    <custom>
        <reflowSkin>
            <theme>bootswatch-flatly</theme>
            <highlightJs>true</highlightJs>
            <brand>
                <name>AcmeDocs</name>
                <href>https://mtwig.github.io/AcmeDocs/</href>
            </brand>
            <toc>sidebar</toc>
            <pages>
                <index>
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>true</breadcrumbs>
                    <toc>true</toc>
                    <sections>
                        <body/>
                    </sections>
                </index>
                <developer-info>
                    <toc>sidebar</toc>
                </developer-info>
            </pages>
        </reflowSkin>
    </custom>
    <body>
        <menu name="Guides" inherit="bottom">
            <item name="Style" href="./java/index.html"/>
            <item name="Java">
                <item name="Hello World" href="./java/hello-world.html"/>
            </item>
            <item name="Spring">
                <item name="Beginner"/>
                <item name="Configuration Properties" href="./spring/configuration-properties.html"/>
            </item>
            <item name="Typescript">
                <item name="Beginner"/>
                <item name="Interfaces" href="./typescript/interface.html"/>
            </item>
        </menu>
    </body>
</project>